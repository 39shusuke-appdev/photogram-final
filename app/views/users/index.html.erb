<h1>List of users</h1>

<table border=1>
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
    <th></th>
  </tr>
   <% @list_of_users.each do |a_user| %>
    <tr>
      <td><%= a_user.username%></td>
      <td>
        <%if a_user.private == true %>
        Yes
        <% else %>
        No
        <% end %>
      </td>
      <td>
        <form action="/insert_follow_request" method="post">
          <label></label>
          <input>
          <button>Follow</button>
        </form>
      </td>
      <td>
      <a href="/users/show">Show details</a></td>
  </tr>
  <% end %>
</table>
